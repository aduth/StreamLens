{
	"name": "stream-lens",
	"private": true,
	"type": "module",
	"version": "1.3.2",
	"description": "Browser extension for displaying live stream status for Twitch",
	"workspaces": [
		"packages/**"
	],
	"scripts": {
		"build": "esbuild background/index.js popup/index.jsx options/index.jsx --bundle --outdir=build --format=esm --jsx-factory=h --jsx-fragment=Fragment --minify",
		"dev": "esbuild background/index.js popup/index.jsx options/index.jsx --sourcemap --bundle --outdir=build --format=esm --jsx-factory=h --jsx-fragment=Fragment --sourcemap=inline --watch",
		"test": "npm run test:lint && npm run test:types && npm run test:unit",
		"clean": "rm -rf build",
		"prepare": "npm run clean && npm run build",
		"test:lint": "eslint .",
		"test:types": "tsc",
		"test:unit": "node --experimental-loader esbuild-esm-loader node_modules/mocha/lib/cli/cli.js --extension js,jsx,ts,tsx -r ./test/setup.ts '{background,options,packages,popup}/**/test/*'",
		"prebundle": "npm run prepare",
		"bundle": "npm-pack-zip"
	},
	"author": {
		"name": "Andrew Duthie",
		"email": "andrew@andrewduthie.com",
		"url": "https://andrewduthie.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/aduth/StreamLens.git"
	},
	"license": "GPL-3.0-or-later",
	"files": [
		"_locales",
		"build",
		"fonts",
		"images",
		"node_modules/webextension-polyfill/dist/browser-polyfill.js",
		"auth.js",
		"background.html",
		"common.css",
		"config.js",
		"manifest.json",
		"options.css",
		"options.html",
		"popup.css",
		"popup.html",
		"!.DS_Store",
		"!test"
	],
	"dependencies": {
		"lodash-es": "^4.17.21",
		"preact": "^10.5.14",
		"prsh": "^1.0.1",
		"unistore": "^3.5.2",
		"unistore-browser-sync": "^1.0.0",
		"webextension-polyfill": "^0.8.0"
	},
	"bundledDependencies": [
		"webextension-polyfill"
	],
	"devDependencies": {
		"@aduth/eslint-config": "^4.2.1",
		"@types/chai": "^4.2.22",
		"@types/lodash-es": "^4.17.5",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"chai": "^4.3.4",
		"esbuild": "^0.13.12",
		"esbuild-esm-loader": "^0.1.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"mocha": "^9.1.2",
		"npm-pack-zip": "^1.2.9",
		"prettier": "^2.4.1",
		"typescript": "^4.4.3",
		"web-ext-types": "^3.2.1"
	}
}
