{
	"extends": "plugin:@wordpress/eslint-plugin/recommended",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"globals": {
		"browser": true
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"ignoredNodes": [ "TemplateLiteral *" ],
				"SwitchCase": 1
			}
		]
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript"
		}
	}
}
