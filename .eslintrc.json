{
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true
	},
	"globals": {
		"browser": true
	},
	"rules": {
		"prettier/prettier": "error",
		"no-async-promise-executor": "off",
		"no-empty": ["error", { "allowEmptyCatch": true }],
		"no-prototype-builtins": "off"
	},
	"overrides": [
		{
			"files": ["test/**/*"],
			"env": {
				"browser": false,
				"node": true
			}
		}
	]
}
