{
	"extends": ["@aduth/eslint-config"],
	"plugins": ["react"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true
	},
	"globals": {
		"browser": true,
		"globalThis": true
	},
	"rules": {
		"react/jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"array-callback-return": ["error", { "allowImplicit": true }]
	},
	"overrides": [
		{
			"files": ["**/test/**/*"],
			"env": {
				"browser": false,
				"node": true,
				"mocha": true
			}
		}
	]
}
