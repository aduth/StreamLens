{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"/*": [
				"*"
			]
		},
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es2019",
		"allowJs": true,
		"checkJs": true,
		"lib": [
			"dom",
			"esnext"
		],
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types",
			"node_modules/web-ext-types"
		],
		"noEmit": true,
		"strictNullChecks": true
	},
	"include": [
		"background",
		"common",
		"options",
		"popup"
	],
	"exclude": [
		"node_modules"
	]
}
