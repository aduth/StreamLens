{
	"name": "StreamLens",
	"version": "1.3.2",
	"description": "__MSG_extDescription__",
	"content_security_policy": "script-src 'self' 'sha256-HYWnxwWLIBZVEoSK3a+ZqjB11maueBKP0C/ssZY2t5Y='; object-src 'self';",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"content_scripts": [
		{
			"matches": [ "https://streamlens.app/auth/" ],
			"js": [ "node_modules/webextension-polyfill/dist/browser-polyfill.js", "auth.js" ],
			"all_frames": true
		}
	],
	"default_locale": "en",
	"permissions": [ "storage" ],
	"manifest_version": 2
}
